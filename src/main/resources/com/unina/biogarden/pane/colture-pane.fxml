<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<fx:root type="Pane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1"
         styleClass="colture-pane"
         style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
    <VBox spacing="4" layoutX="12" layoutY="12">
        <Label fx:id="coltureNameLabel"
               style="-fx-font-weight: 600; -fx-font-size: 14px; -fx-text-fill: #222;"/>
        <Label fx:id="coltureDateStatusLabel"
               style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
    </VBox>
</fx:root>