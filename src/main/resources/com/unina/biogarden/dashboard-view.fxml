<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unina.biogarden.controller.MainLayoutController">

    <!-- SIDEBAR SINISTRA -->
    <left>
        <AnchorPane prefWidth="220.0" style="-fx-background-color: #fff; -fx-border-width: 0 1 0 0; -fx-border-color: #e0e0e0;">
            <VBox spacing="28" style="-fx-padding: 0 0 0 36;" AnchorPane.bottomAnchor="88" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="38">

                <!-- LOGO + TITOLO IN HBOX -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <ImageView fitHeight="36.0" fitWidth="36.0">
                        <image>
                            <Image url="@../../../logo.png" />
                        </image>
                    </ImageView>
                    <Label style="-fx-font-size: 22px; -fx-font-family: 'Inter', 'Arial', sans-serif; -fx-font-weight: bold; -fx-text-fill: #222;" text="Bio Garden" />
                </HBox>

                <!-- Menu Items -->
                <VBox spacing="10">
                    <HBox onMouseClicked="#changePage" spacing="12" styleClass="menu-item">
                        <ImageView fitHeight="22" fitWidth="22">
                            <image>
                                <Image url="@icons/home.png" />
                            </image>
                        </ImageView>
                        <Label styleClass="menu-label" text="Dashboard" />
                    </HBox>
                    <HBox fx:id="projects" onMouseClicked="#changePage" spacing="12" styleClass="menu-item">
                        <ImageView fitHeight="22" fitWidth="22">
                            <image>
                                <Image url="@icons/projects.png" />
                            </image>
                        </ImageView>
                        <Label styleClass="menu-label" text="Progetti" />
                    </HBox>
                    <HBox fx:id="lots" onMouseClicked="#changePage" spacing="12" styleClass="menu-item">
                        <ImageView fitHeight="22" fitWidth="22">
                            <image>
                                <Image url="@icons/lots.png" />
                            </image>
                        </ImageView>
                        <Label styleClass="menu-label" text="Lotti" />
                    </HBox>
                    <HBox fx:id="crops"  onMouseClicked="#changePage" spacing="12" styleClass="menu-item">
                        <ImageView fitHeight="22" fitWidth="22">
                            <image>
                                <Image url="@icons/crops.png" />
                            </image>
                        </ImageView>
                        <Label styleClass="menu-label" text="Colture" />
                    </HBox>
                </VBox>
            </VBox>
            <Button style="-fx-font-size: 16px; -fx-font-family: 'Inter', 'Arial'; -fx-font-weight: bold; -fx-background-radius: 8; -fx-background-color: #222; -fx-text-fill: #fff; -fx-pref-width: 168px; -fx-pref-height: 40px; -fx-cursor: hand;" text="Esci" AnchorPane.bottomAnchor="28" AnchorPane.leftAnchor="24" onMouseClicked="#onClose"/>
        </AnchorPane>
    </left>

    <!-- AREA DINAMICA DESTRA -->
    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: transparent;" />
    </center>
</BorderPane>
